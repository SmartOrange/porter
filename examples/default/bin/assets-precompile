#!/usr/bin/env node --harmony

'use strict'

const co = require('co')
const porter = require('../../..')

co(function*() {
  yield* porter.compileAll()
  yield* porter.compileStyleSheets({ match: 'stylesheets/app.css' })
})
  .then(function() {
    console.log('done')
  })
  .catch(function(err) {
    console.error(err.stack)
  })
